<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.screen.HomeScreen">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/homeImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/back_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/title"
        app:layout_constraintBottom_toTopOf="@+id/homePlayButton3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:elevation="10dp"
        android:id="@+id/homePlayButton"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/button_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/homePlayButton2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:elevation="10dp"
        android:src="@drawable/tooltip_play"
        app:layout_constraintBottom_toTopOf="@+id/homePlayButton"
        app:layout_constraintEnd_toEndOf="@+id/homePlayButton"
        app:layout_constraintStart_toEndOf="@+id/homePlayButton"
        app:layout_constraintTop_toTopOf="@+id/homePlayButton" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/homePlayButton3"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:src="@drawable/button_start_lights"
        app:layout_constraintBottom_toBottomOf="@+id/homePlayButton"
        app:layout_constraintEnd_toEndOf="@+id/homePlayButton"
        app:layout_constraintStart_toStartOf="@+id/homePlayButton"
        app:layout_constraintTop_toTopOf="@+id/homePlayButton" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/homeLikeButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/button_rate" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/homeShareButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/button_google_play" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/homeMusicButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/button_music_on" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        app:constraint_referenced_ids="homeLikeButton,homeShareButton,homeMusicButton"
        app:flow_wrapMode="chain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>